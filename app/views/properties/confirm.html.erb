<%= form_with(model: @property, url: properties_path, local: true) do |form| %>

 <p>
   <strong>Property:</strong>
   <%= @property.propert %>
   <%= form.hidden_field :propert %>
 </p>

 <p>
   <strong>Rent</strong>
   <%= @property.rent %>
   <%= form.hidden_field :rent %>
 </p>

 <p>
   <strong>Address:</strong>
   <%= @property.address %>
   <%= form.hidden_field :address %>
 </p>

 <p>
   <strong>Building age:</strong>
   <%= @property.building_age %>
   <%= form.hidden_field :building_age %>
 </p>

 <p>
   <strong>Remarks:</strong>
   <%= @property.remarks %>
   <%= form.hidden_field :remarks %>
 </p>

 <div>
   <% n = 0 %>
   <%= form.fields_for :nearest_stations do |nearstat| %>
   <h2>Name of railway line <%= n += 1 %></h2>

   <p>
     <%= nearstat.label :Name_of_railway %>
     <%= nearstat.text_area :name %>
   </p>

   <p>
     <%= nearstat.label :Station_name %>
     <%= nearstat.text_area :railway %>
   </p>

   <p>
     <%= nearstat.label :How_many_minutes_walk %>
     <%= nearstat.number_field :time %><span> min/mins </span>
   </p>

   <% end %>
 </div>

 <%= form.submit "PUBLIER" %><br>
 <% end %>
 <br>
